{
    "name": "chroma",
    "displayName": "chroma",
    "publisher": "cashmere",
    "description": "",
    "version": "0.0.1",
    "contributes": {
        "configuration": {
            "title": "Chroma",
            "properties": {
                "chroma.solarized": {
                    "type": "boolean",
                    "description": "This extension contains keyboard backlighting inspired by the solarized color scheme",
                    "default": false
                },
                "chroma.theme": {
                    "type": "boolean",
                    "description": "Get the backlighting colors from the current theme (UI colors)",
                    "default": true
                },
                "chroma.colors.base": {
                    "type": "string",
                    "description": "Basic key color"
                },
                "chroma.colors.group.modifier": {
                    "type": "string",
                    "description": "Color for modifier keys"
                },
                "chroma.colors.group.editing": {
                    "type": "string",
                    "description": "Color for editing keys"
                },
                "chroma.colors.group.system": {
                    "type": "string",
                    "description": "Color for system keys"
                },
                "chroma.colors.keys": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "Key color definition",
                        "properties": {
                            "key": {
                                "type": "string",
                                "description": "Key name"
                            },
                            "default": {
                                "type": "string",
                                "description": "Default key color in any of CSS formats"
                            },
                            "highlighted": {
                                "type": "string",
                                "description": "Key color for shortcut highlighting"
                            }
                        }
                    },
                    "markdownDescription": "Color overrides for each key [Key names](https://github.com/let-value/chroma/blob/master/src/data/scancodes.ts)",
                    "default": []
                }
            }
        }
    },
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/chroma-js": "^2.1.3",
        "@types/copy-webpack-plugin": "^8.0.0",
        "@types/eslint": "^7.2.11",
        "@types/file-loader": "^5.0.0",
        "@types/glob": "^7.1.3",
        "@types/lodash-es": "^4.17.4",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/node-fetch": "^2.5.10",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "clean-webpack-plugin": "^4.0.0-alpha.0",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.19.0",
        "file-loader": "^6.2.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "node-loader": "^2.0.0",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    },
    "dependencies": {
        "chroma-js": "^2.1.2",
        "html-loader": "^2.1.2",
        "iohook": "file:./iohook",
        "jsonc": "^2.0.0",
        "lodash-es": "^4.17.21",
        "mobx": "^6.3.2",
        "node-fetch": "^2.6.1",
        "pascal-case": "^3.1.2"
    },
    "iohook": {
        "targets": [
            "node-88",
            "electron-87"
        ],
        "platforms": [
            "win32",
            "darwin",
            "linux"
        ],
        "arches": [
            "x64",
            "ia32"
        ]
    }
}
